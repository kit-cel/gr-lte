<?xml version="1.0"?>
<block>
  <name>OFDM linear Estimator</name>
  <key>lte_linear_OFDM_estimator_hier_vcvc</key>
  <category>lte</category>
  <import>import lte</import>
  <make>lte.linear_OFDM_estimator_hier_vcvc($N_rb_dl)</make>
  <callback>set_cell_id()</callback>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>resource blocks</name>
    <key>N_rb_dl</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>12*$N_rb_dl</vlen>
  </sink>
<!-- --> 
  <sink>
    <name>cell_id</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
<!-- -->
  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out0</name>
    <type>complex</type>
    <vlen>12*$N_rb_dl</vlen>
  </source>
  
  <source>
    <name>out1</name>
    <type>complex</type>
    <vlen>12*$N_rb_dl</vlen>
  </source>
  
  <source>
    <name>out2</name>
    <type>complex</type>
    <vlen>12*$N_rb_dl</vlen>
  </source>
  

</block>
